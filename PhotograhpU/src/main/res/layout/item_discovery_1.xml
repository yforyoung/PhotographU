<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="460dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_discovery_1_head"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="#fdcbcb" />

        <TextView
            android:id="@+id/item_discovery_1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@id/item_discovery_1_head"
            android:text="小蕾爱摄影"
            android:textColor="#000"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/item_discovery_1_img"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_below="@id/item_discovery_1_head"
            android:layout_marginTop="10dp"
            android:background="#d1f2dc" />

        <TextView
            android:id="@+id/item_discovery_1_content"
            android:padding="20dp"
            android:textStyle="bold"
            android:text="抓住春天的尾巴啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦啦"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_discovery_1_img"
           />
        <LinearLayout
            android:layout_below="@id/item_discovery_1_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="46dp">
            <TextView
                android:id="@+id/item_discovery_1_thumb_up"
                android:text="点赞"
                android:textColor="#62b6d7"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/item_discovery_1_thumb_up_count"
                android:text="31"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/item_discovery_1_comment"
                android:text="评论"
                android:textColor="#62b6d7"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/item_discovery_1_comment_count"
                android:text="31"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/item_discovery_1_share"
                android:text="分享"
                android:textColor="#62b6d7"
                android:gravity="center"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>